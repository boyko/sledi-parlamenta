<!DOCTYPE html>
<html>
<head>
  <title><%= t('open-parliament') %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrap">

  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container">
      <div class="row">
        <div class="col-md-5">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">
              <%= image_tag "logo.png" %>
            </a>
          </div>
        </div>
        <div class="col-md-7">
          <ul class="nav navbar-nav">
            <li <%= controller_name == "members" ? "class=active" : "" %>> <%= link_to t('nav.members'), members_path %> </li>
            <li <%= controller_name == "sessions" ? "class=active" : "" %>> <%= link_to t('nav.sessions'), sessions_path %> </li>
            <li <%= controller_name == "structures" ? "class=active" : "" %>> <%= link_to t('nav.structures'), structures_path %> </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="container wrapper">
    <% flash.each do |type, message| %>
      <div class="alert <%= { notice: "alert-info" }[type.to_sym] %> fade in">
        <button class="close" data-dismiss="alert">Ã—</button>
        <%= message %>
      </div>
    <% end %>

    <%= yield %>
  </div>

</div> <!-- end of #wrap -->
<div id="footer" class="social-media">
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <small>2014 OpenParliament | <%= link_to "Obshtestvo.bg", "http://obshtestvo.bg" %></small>
      </div>
      <div class="col-md-2">
        <div class="pull-right">
          <%= link_to "https://www.facebook.com/groups/obshtestvo/" do %><i class="fa fa-facebook fa-2x"></i><% end %>
          <%= link_to "https://github.com/obshtestvo/open-parliament" do %><i class="fa fa-github fa-2x"></i><% end %>
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>
