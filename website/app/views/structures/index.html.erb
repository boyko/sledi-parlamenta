<div class="page-header">
  <h1>Структури</h1>
</div>

<table class="table table-striped">
  <tr>
    <td>Име</td>
    <td>Тип</td>
    <td>Създадена</td>
    <td>Закрита</td>
  </tr>
    <% @structures.each_with_index do |m, index| %>
  <tr>
    <td><%= link_to m.name, structure_path(m) %></td>
    <td><%= m.kind %></td>
    <td><%= m.start_date %></td>
    <td><%= m.end_date %></td>
  </tr>
<% end %>

</table>
